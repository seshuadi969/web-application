pipeline {
    agent {
        docker {
            image 'python:3.11-slim'
            args '-u root'
        }
    }
    
    stages {
        stage('Checkout and Setup') {
            steps {
                checkout scm
                sh '''
                    python --version
                    pip --version
                '''
            }
        }
        
        stage('Install Dependencies') {
            steps {
                sh '''
                    cd backend
                    pip install -r requirements.txt
                '''
            }
        }
        
        // ... rest of stages
    }
}
